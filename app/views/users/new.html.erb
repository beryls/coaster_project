<h1>Add a new user</h1>

<% if @user.errors.any? %>
  <h2>You've got <%= pluralize(@user.errors.count, "problem") %>!</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

<%= form_tag('/users', method: 'post') do %>
  <%= text_field_tag(:name, nil, :placeholder => 'Name') %><br />
  <%= text_field_tag(:user_name, nil, :placeholder => 'User Name') %><br />
  <%= text_field_tag(:email, nil, :placeholder => 'Email') %><br />
  <%= text_field_tag(:password, nil, :placeholder => 'Password - 8+ char.') %><br />
  <%= submit_tag 'Create User' %>
<% end %>